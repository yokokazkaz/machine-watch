<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      人生を変えるフリマアプリ
    </h2>
    <p class='service-explain'>
      FURIMAはだれでもかんたんに出品・購入できる
    </p>
    <p class='service-explain'>
      フリマアプリです
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("https://linkmaker.itunes.apple.com/ja-jp/badge-lrg.svg?releaseDate=2011-09-21&kind=iossoftware&bubble=ios_apps", class:"apple-btn"), "#" %>
      <%= link_to image_tag("dl-android.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>

  <%# FURIMAが選ばれる3つの理由部分 %>
  <div class='select-reason-contents'>
    <h2 class='title'>
      FURIMAが選ばれる3つの理由
    </h2>
    <ul class='reason-lists'>
      <li class='list'>
        <%= image_tag "step01.jpg", class:"list-pict" %>
        <span class='reason-list-number'>1</span>
        <h3 class='reason-list-text'>
          <span class='reason-list-blue-text'>3分</span>
          ですぐに出品
        </h3>
        <p class='reason-list-description'>
          スマホで入力するだけで簡単に出品できる！
        </p>
      </li>
      <li class='list'>
        <%= image_tag "step02.jpg", class:"list-pict" %>
        <span class='reason-list-number'>2</span>
        <h3 class='reason-list-text'>
          <span class='reason-list-blue-text'>シンプル</span>
          で使いやすい
        </h3>
        <p class='reason-list-description'>
          めんどくさい入力は必要なく、検索も購入もスムーズ！
        </p>
      </li>
      <li class='list'>
        <%= image_tag "step03.jpg", class:"list-pict" %>
        <span class='reason-list-number'>3</span>
        <h3 class='reason-list-text'>
          手数料
          <span class='reason-list-blue-text'>業界最安</span>
        </h3>
        <p class='reason-list-description'>
          最大3%でお得に出品&購入！
        </p>
      </li>
    </ul>
  </div>
  <%# /FURIMAが選ばれる3つの理由部分 %>

  <%# マシン一覧 %>
  <div class='item-contents'>
    <h2 class='title'>設置マシン一覧</h2>
    <ul class='item-lists'>

    <% @machines.each do |machine|%>
      <li class='list'>
        <%= link_to machine_path(machine.id), method: :get do %>
        <div class='item-img-content'>
          <%= image_tag machine.image, class: "item-img" %>

          <%# 商品が売れていればsold outを表示しましょう %>
          <%# <div class='sold-out'> %>
            <%# <span>Use In!!</span> %>
          <%# </div> %>
          <%# //商品が売れていればsold outを表示しましょう %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= machine.name %>
          </h3>
        </div>
        <% end %>
      <% if user_signed_in? && current_user.id == 1 %>
        <div class="status-change">
          <%= link_to '情報の編集', edit_machine_path(machine.id), method: :get, class: "status-change-btn"%>
        </div>
      <% end %>
        <div class="machine-use-status">
          利用状況
        </div>
        <div class='status-btn'>
          <% if machine.status_id == 1 %>
            <span class='status-blue-text'>空</span>
          <% else %>
            <span class='status-red-text'>満</span>
          <% end %>
        </div>
        
        <% if machine.status_id == 2 %>  
          <div class='time-info'>
            <h3 class='time-name'>
             終了予定時刻　<%= machine.time %>
            </h3>
          </div>
        <% end %>
      </li>
    <% end %>
  </div>
  <%# /マシン一覧 %>
</div>

<%= render "shared/footer" %>